. $NOVIX_WORKSPACE/lib/_common
function help() {
    echo ""
    echo "===================================================================="
    echo " Used for applying the 'novix' config to a local host."
    echo ""
    echo " [Usage]:  novix-configure-remote"
    echo ""
    echo "===================================================================="
    echo ""
    exit
}

# Usage and help
if [ "$1" = "help" ]; then help; fi
if [ "$1" = "--help" ]; then help; fi
if [ "$1" = "-h" ]; then help; fi

REMOTE=$1
USER=root

echo "Begin local configure..."
cp -rv $NOVIX_WORKSPACE/etc/* /etc/
cp -rv $NOVIX_WORKSPACE/home/novix/* ${HOME}
cp -rv $NOVIX_WORKSPACE/home/novix/.* ${HOME}