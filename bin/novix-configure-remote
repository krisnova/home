. $NOVA_WORKSPACE/lib/_common
function help() {
    echo ""
    echo "===================================================================="
    echo " Used for applying the 'novix' config to a remote host."
    echo ""
    echo " [Usage]:  novix-configure-remote <remote>"
    echo ""
    echo "      Ex:  novix-configure-remote nivenly.com"
    echo "      Ex:  novix-configure-remote https://10.0.0.1"
    echo ""
    echo "===================================================================="
    echo ""
    exit
}

# Usage and help
if [ -z "$1" ]; then help; fi
if [ "$1" = "help" ]; then help; fi
if [ "$1" = "--help" ]; then help; fi
if [ "$1" = "-h" ]; then help; fi

REMOTE=$1
USER=root

echo "Begin ssh/scp configure -> [$USER@$REMOTE]..."

scp -r $NOVA_WORKSPACE/etc/* $USER@$REMOTE:/etc/
scp -r $NOVA_WORKSPACE/home/* $USER@$REMOTE:/home/
ssh $USER@$REMOTE "chown -R novix: /home/novix"
