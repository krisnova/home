. $NOVA_WORKSPACE/lib/_common

if [ -z "$1" ]; then
    echo "Usage: ./install_remote <REMOTE>"
    exit 1
fi

REMOTE=$1
USER=root

echo "Begin ssh/scp configure -> [$USER@$REMOTE]..."

scp -r $NOVA_WORKSPACE/etc/* $USER@$REMOTE:/etc/
scp -r $NOVA_WORKSPACE/home/* $USER@$REMOTE:/home/
ssh $USER@$REMOTE "chown -R novix: /home/novix"

