. $HOME/lib/_common
function help() {
    echo ""
    echo "===================================================================="
    echo " Used for installing the 'novix' config to a remote host."
    echo ""
    echo " [Usage]:  novix-install-remote <remote>"
    echo ""
    echo "      Ex:  novix-install-remote 10.0.0.1"
    echo ""
    echo "===================================================================="
    echo ""
    exit
}

# Usage and help
if [ -z "$1" ]; then help; fi
if [ "$1" = "help" ]; then help; fi
if [ "$1" = "--help" ]; then help; fi
if [ "$1" = "-h" ]; then help; fi

REMOTE=$1
USER=root

# Launch the novix installer on the remote
echo "Begin ssh/scp install -> [$USER@$remote]..."
ssh $USER@$REMOTE "touch /var/log/novix.log && /home/novix/bin/novix 2> /var/log/novix.log &"
