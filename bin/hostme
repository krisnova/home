function help() {
    echo ""
    echo "===================================================================="
    echo " Host a payload which can be include in other ways.                 "
    echo ""
    echo " [Usage]:  hostme <file>                                            "
    echo ""
    echo "===================================================================="
    echo ""
    exit
}

# Usage and help
if [ -z "$1" ]; then help; fi
if [ "$1" = "help" ]; then help; fi
if [ "$1" = "--help" ]; then help; fi
if [ "$1" = "-h" ]; then help; fi
FILE=$1
PORT=9075
DIR=$(dirname $FILE)
echo "Hosting files from: $DIR on port: $PORT..."
python -m http.server $PORT