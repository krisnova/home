function help() {
    echo ""
    echo "===================================================================="
    echo " Run an OCI container bundle with Youki."
    echo ""
    echo " [Usage]:  youki-run <path>"
    echo ""
    echo "      Ex:  youki-run /var/run/aurae/bundles/busybox"
    echo ""
    echo "===================================================================="
    echo ""
    exit
}

# Usage and help
if [ -z "$1" ]; then help; fi
if [ "$1" = "help" ]; then help; fi
if [ "$1" = "--help" ]; then help; fi
if [ "$1" = "-h" ]; then help; fi

P=$1

sudo -E youki create -b 
