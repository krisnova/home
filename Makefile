default: help

install: ## Install workspace
	@echo "Installing..."
	. lib/_install

clean: ## Clean your artifacts 🧼
	@echo "Cleaning..."
	rm -rvf out/*
	rm -rvf *flag*

.PHONY: help
help:  ## 🤔 Show help messages for make targets
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[32m%-30s\033[0m %s\n", $$1, $$2}'
